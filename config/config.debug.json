{
  "system": {
    "name": "PenDonn",
    "version": "1.0.0",
    "auto_start": true,
    "log_level": "DEBUG"
  },
  "debug": {
    "enabled": true,
    "mock_wifi": true,
    "mock_display": true,
    "mock_cracking": true,
    "test_data_generation": true,
    "verbose_logging": true,
    "simulate_delays": true
  },
  "wifi": {
    "monitor_interface": "wlan1",
    "attack_interface": "wlan2",
    "management_interface": "wlan0",
    "channel_hop_interval": 2,
    "handshake_timeout": 300
  },
  "whitelist": {
    "ssids": ["MyHomeWiFi", "WorkNetwork"]
  },
  "cracking": {
    "enabled": true,
    "engines": ["john", "hashcat"],
    "wordlist_path": "./test_data/mini_wordlist.txt",
    "auto_start_cracking": true,
    "max_concurrent_cracks": 2,
    "john_format": "wpapsk",
    "hashcat_mode": 22000
  },
  "enumeration": {
    "enabled": true,
    "auto_scan_on_crack": true,
    "nmap_timing": "T4",
    "port_scan_range": "1-1000",
    "scan_timeout": 600
  },
  "plugins": {
    "enabled": true,
    "directory": "./plugins",
    "auto_load": true
  },
  "database": {
    "path": "./data/pendonn_debug.db",
    "backup_on_export": true
  },
  "web": {
    "host": "127.0.0.1",
    "port": 8080,
    "secret_key": "DEBUG_SECRET_KEY_DO_NOT_USE_IN_PRODUCTION"
  },
  "display": {
    "enabled": true,
    "type": "mock_console",
    "refresh_interval": 5,
    "brightness": 80
  }
}
